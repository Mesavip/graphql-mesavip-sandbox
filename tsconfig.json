{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "esnext.asynciterable",
      "ES2021",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@resolvers/*": ["resolvers/*"],
    },
    "outDir": "dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  }
}